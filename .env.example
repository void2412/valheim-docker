# Valheim Docker Environment Configuration
# Copy this file to .env and customize values

# ===================
# Server Configuration
# ===================
SERVER_NAME="My Valheim Server"
SERVER_PORT=2456
WORLD_NAME="Dedicated"
SERVER_PASS=              # Min 5 characters, leave empty for no password
SERVER_PUBLIC=1           # 1=listed, 0=unlisted
CROSSPLAY=false

# ===================
# Timezone
# ===================
TZ=UTC

# ===================
# BepInEx (Mods)
# ===================
BEPINEX=false             # Set to true to enable mod support

# ===================
# Backups
# ===================
BACKUPS=true
BACKUPS_CRON="0 * * * *"  # Every hour
BACKUPS_MAX_AGE=3         # Days to keep backups
BACKUPS_MAX_COUNT=0       # Max backups (0=unlimited)
BACKUPS_IF_IDLE=true      # Only backup if no players
BACKUPS_IDLE_GRACE_PERIOD=3600
BACKUPS_COMPRESS=true

# ===================
# Scheduled Restarts
# ===================
RESTART_CRON=             # e.g., "0 6 * * *" for daily 6am
RESTART_IF_IDLE=true      # Only restart if no players

# ===================
# Supervisord HTTP API (for remote control)
# ===================
SUPERVISOR_HTTP=true
SUPERVISOR_HTTP_PORT=9001
SUPERVISOR_HTTP_USER=admin
SUPERVISOR_HTTP_PASS=     # Set a strong password!
